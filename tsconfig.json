{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "sourceMap": false,
    "lib": ["es2015"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
